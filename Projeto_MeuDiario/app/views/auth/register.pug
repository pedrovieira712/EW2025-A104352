extends ../layout

block content
  .row.justify-content-center.mt-5
    .col-md-4
      .card.shadow
        .card-body.p-4
          .text-center.mb-4
            i.bi.bi-person-plus.text-primary(style='font-size: 3rem;')
            h3.mt-2 Criar Conta
          
          if error
            .alert.alert-danger= error
          
          form(method='POST', action='/auth/register')
            .mb-3
              input.form-control.form-control-lg(
                type='text', 
                name='name', 
                placeholder='Nome completo',
                required
              )
            
            .mb-3
              input.form-control.form-control-lg(
                type='text', 
                name='username', 
                placeholder='Username',
                required
              )
            
            .mb-3
              input.form-control.form-control-lg(
                type='email', 
                name='email', 
                placeholder='Email',
                required
              )
            
            .mb-3
              input.form-control.form-control-lg(
                type='password', 
                name='password', 
                placeholder='Password',
                required
              )
            
            .d-grid.mb-3
              button.btn.btn-primary.btn-lg(type='submit') Criar Conta
        
